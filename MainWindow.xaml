<Window x:Class="DksImager_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DksImager_2"
        mc:Ignorable="d"
        Title="ДКС Фото 2.0" 
        Height="800" 
        Width="900"
        Background="#FFE8E8E8" 
        ResizeMode="NoResize">
    <Grid>
        <Border x:Name="BrowserBorder" BorderBrush="Black" BorderThickness="1" Margin="7.5,59.5,429,8"/>
        <Image  x:Name="PdfView" Height="690"  Width="446" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,60,0,0"/>

        <Border x:Name="BrowserCropBorder" BorderBrush="Black" BorderThickness="1" Margin="483,61,14,199"/>
        <Image x:Name="cropView" Margin="485,62,15,200"/>

        <Button 
            Content="Открыть PDF" 
            Click="OpenPdf"
            HorizontalAlignment="Left" 
            Margin="199,23,0,0"
            Padding="5,3,5,5"
            Height="24"
            VerticalAlignment="Top" 
            RenderTransformOrigin="-1.01,0.403"  
            Background="#FFCECECE" 
            BorderThickness="0,0,0,0"/>

        <Button 
Content="Сохранить изображение"
Click="SaveImage"
HorizontalAlignment="Left" 
Margin="605,22,0,0"
Padding="5,3,5,5"
Height="26"
VerticalAlignment="Top" RenderTransformOrigin="0.499,0.578" Foreground="Black" Background="#FFCECECE" BorderThickness="0,0,0,0"/>

        <Button
         Content="настройки" 
Click="StartSettings"
HorizontalAlignment="Left" 
Margin="644,656,0,0"
Padding="5,3,5,5"
Height="25"
VerticalAlignment="Top" 
RenderTransformOrigin="-1.01,0.403"  Background="#FFCECECE" BorderThickness="0,0,0,0"/>
        
     

    </Grid>
</Window>
